<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="3dp">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardListIncidencias"
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:layout_margin="2dp"
        app:cardBackgroundColor="#A11D2868"
        app:cardCornerRadius="@dimen/mapbox_internalMinSpan24"
        app:cardPreventCornerOverlap="false">


        <Button
            android:id="@+id/btMessagesAd"
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:layout_weight="1"
            android:background="#00FBFBFB" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tvTitleAd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:paddingStart="8dp"
                android:text="@string/title"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDescriptionAd"
                style="@style/Widget.Material3.MaterialTimePicker.Display.HelperText"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="4dp"
                android:paddingStart="8dp"
                android:text="@string/ad_description"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDateStartAd"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="@string/start"
                    android:textAlignment="center"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tvDateFinishedAd"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="@string/end"
                    android:textAlignment="center"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:orientation="horizontal">

                <Switch
                    android:id="@+id/swFinished"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="60dp"
                    android:layout_weight="1"
                    android:text="@string/resolver"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>